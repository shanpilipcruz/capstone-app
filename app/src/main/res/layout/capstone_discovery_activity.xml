<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tan_background"
        android:orientation="vertical"
        tools:context=".DiscoveryActivity">


        <TextView
            android:id="@+id/hotel"
            style="@style/CategoryStyle"
            android:background="@color/category_hotel"
            android:text="@string/category_hotel" />

        <TextView
            android:id="@+id/cafes"
            style="@style/CategoryStyle"
            android:background="@color/category_cafes"
            android:text="@string/category_cafes" />

        <TextView
            android:id="@+id/fam_attract"
            style="@style/CategoryStyle"
            android:background="@color/category_fam_attract"
            android:text="@string/category_fam_attract" />

        <TextView
            android:id="@+id/museums"
            style="@style/CategoryStyle"
            android:background="@color/category_museums"
            android:text="@string/category_museums" />

        <TextView
            android:id="@+id/catacombs"
            style="@style/CategoryStyle"
            android:background="@color/category_catacombs"
            android:text="@string/category_catacombs" />

        <TextView
            android:id="@+id/music"
            style="@style/CategoryStyle"
            android:background="@color/category_music"
            android:text="@string/category_music" />

    </LinearLayout>
</ScrollView>
