<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photoImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/nameTextView"
                style="@style/locationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/descriptionTextView"
                style="@style/locationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/addressTextView"
                style="@style/locationAddressSchedulePricePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="map"
                android:drawableLeft="@drawable/ic_discovery_add_location"
                android:text="" />

            <TextView
                android:id="@+id/workHoursTextView"
                style="@style/locationAddressSchedulePricePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_discovery_schedule"
                android:text="" />

            <TextView
                android:id="@+id/phoneTextView"
                style="@style/locationAddressSchedulePricePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:drawableLeft="@drawable/ic_discovery_phone"
                android:text="" />

            <TextView
                android:id="@+id/siteTextView"
                style="@style/locationAddressSchedulePricePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:drawableLeft="@drawable/ic_discovery_site"
                android:text="" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>